<extend name="Public/base"/>

<block name="body">
    <div class="main-title">
        <h2>新增店面</h2>
    </div>
    <form action="{:U('edit')}" method="post" class="form-horizontal">
        <eq name="uid" value="1">
            <div class="form-item">
                <label class="item-label">所属加盟商</label>
                <div class="controls">
                    <notempty name="businesslists">
                        <select name="business_id">
                            <volist name="businesslists" id="vo">
                                <eq name="shopinfo.business_id" value="$vo.business_id">
                                	<option value="{$vo.business_id}" selected="selected">{$vo.business_name}</option>
                                	<else/>
                                	<option value="{$vo.business_id}">{$vo.business_name}</option>
                                </eq>
                            </volist>
                        </select>
                        <else/>
                        <a href="{:U('Business/add')}">请先添加加盟商</a>
                    </notempty>
                </div>
            </div>
            <else/>
            <input style="display: none;" type="text" name="business_id" value="{$businessinfo.business_id}">
        </eq>
        <div class="form-item">
            <label class="item-label">店面名称</label>
            <div class="controls">
                <input type="text" class="text input-large" name="shop_name" value="{$shopinfo.shop_name}">
                <input type="text" class="text input-large" style="display: none;" name="shop_id" value="{$shopinfo.shop_id}">
            </div>
        </div>
        <div class="form-item">
            <label class="item-label">店面地址</label>
            <div class="controls">
                <input type="text" class="text input-large" name="shop_address" value="{$shopinfo.shop_address}">
            </div>
        </div>
        <div class="form-item">
            <button class="btn submit-btn ajax-post" id="submit" type="submit" target-form="form-horizontal">确 定</button>
            <button class="btn btn-return" onclick="javascript:history.back(-1);return false;">返 回</button>
        </div>
    </form>
</block>

<block name="script">
    <script type="text/javascript">
        //导航高亮
        highlight_subnav('{:U('Shop/index')}');
    </script>
</block>
