<extend name="Public/base"/>
<block name="body">
    <div class="main-title">
        <h2>订单详情</h2>
    </div>
    <div class="box" style="width: 40%;">
        <p>订单编号：{$orderdetail.sn}<span style="float: right;">订单时间：{$orderdetail.add_time|date="Y-m-d H:i:s",###}</span></p>
        <div style="width: 100%;height: 5px;background: #EEE;margin: 5px 0;"></div>
        <volist name="orderdetail.goodsdetail" id="vo">
            <p style="height: 35px;line-height: 35px;">商品名称：{$vo.goods_name}×{$vo.num}<span style="float: right;color: red">￥{$vo.small_count}</span></p>
        </volist>
        <div style="width: 100%;height: 5px;background: #EEE;margin: 5px 0;"></div>

        <p style="font-size: 16px;font-weight: bold;height: 35px;line-height: 35px">总量：{$orderdetail.allnum}</p>
        <p style="font-size: 16px;font-weight: bold;height: 35px;line-height: 35px">合计：<span style="color: red;">{$orderdetail.allcount}</span></p>
        <p>订单状态：<eq name="orderdetail.status" value="1"><span style="color: green;">已完成</span><else/><psan style="color: red;">待支付</psan></eq></p>
    </div>
     <div class="form-item" style="margin-top: 15px;">
            <button class="btn btn-return" onclick="javascript:history.back(-1);return false;">返 回</button>
        </div>
</block>

<block name="script">
    <script type="text/javascript">
        //导航高亮
        highlight_subnav('{:U('Order/index')}');
    </script>
</block>
